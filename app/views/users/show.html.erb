<div class="container">
  <h1 align="center" style="margin-top: 90px; margin-bottom: 50px;"><%=@user.name.capitalize %></h1>
  <%=@user.password %>
  <table class="table table-hover" style="margin-top: 20px">
    <thead>
      <tr class="table-dark">
        <th colspan="3" scope="col" style="text-align: center">My Class</th>
      </tr>
      <tr>
        <th>STANDARD</th>
        <th>TOTAL STUDENTS</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%@user.standards.each do |s| %>
        <tr>
            <td><%=s.standard %></td>
            <td><%=s.students.all.count %></td>
            <td><%= link_to 'show', students_path(standard: "#{s.id}"), class: "btn btn-outline-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div align="right">
    <%=link_to 'back', :back, class: "btn btn-outline-dark" %>
    <%if current_user == @user || current_user.is_admin? %>
      <%=link_to 'edit profile', edit_user_path, class: "btn btn-outline-warning" %>
    <%else %>
      <%=link_to 'edit profile', edit_user_path, class: "btn btn-outline-dark disabled" %>
    <%end %>
  </div>
</div>